{
  "name": "html-css-developer-applicant-challenge",
  "version": "1.0.0",
  "description": "Create a landing page in HTML and CSS to match the specified Figma design.",
  "main": "index.html",
  "scripts": {
    "start": "npm-run-all -p scss browser-sync",
    "scss": "node-sass --watch style.scss style.css",
    "browser-sync": "browser-sync start --server --files \"*.html, style.css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgwyer/html-css-developer-applicant-challenge.git"
  },
  "author": "David Gwyer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dgwyer/html-css-developer-applicant-challenge/issues"
  },
  "homepage": "https://github.com/dgwyer/html-css-developer-applicant-challenge#readme",
  "devDependencies": {
    "browser-sync": "^2.29.1",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5"
  }
}
